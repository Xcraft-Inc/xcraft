#!/bin/bash

if [ -n "${PEON_SHARE}" ]; then
    CCACHE_BASEDIR=${PEON_SHARE}
else
    CCACHE_BASEDIR=${XCRAFT_DEVROOT}
fi
export CCACHE_BASEDIR

COMMAND="$(dirname "$0")/../../bin/c++"
if ! command -v "$COMMAND" >/dev/null; then
    [ "$MSYSTEM" = MINGW64 ] && COMMAND="c++.exe" || COMMAND="c++"
fi

ccache "$COMMAND" "$@"
