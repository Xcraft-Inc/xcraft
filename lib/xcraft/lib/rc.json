{
  "unpm": {
    "desc": "start/stop/restart a unpm instance",
    "options": {
      "params": {
        "required": "cmd"
      }
    }
  },
  "watcher": {
    "desc": "start/stop/restart the watcher for lib/",
    "options": {
      "params": {
        "required": "cmd"
      }
    }
  },
  "init": {
    "desc": "create main config file in etc",
    "options": {
      "params": {
        "optional": "paths..."
      }
    }
  },
  "bin": {
    "desc": "populate the bin/ directory with base commands",
    "options": {
      "params": {
        "optional": "bins..."
      }
    }
  },
  "deploy": {
    "desc": "configure uNPM with backend",
    "options": {
      "params": {
        "required": "ip:port"
      }
    }
  },
  "defaults": {
    "desc": "create config for all or one installed module(s)",
    "options": {
      "params": {
        "optional": "modules..."
      }
    }
  },
  "configure": {
    "desc": "configure a module",
    "options": {
      "wizard": true,
      "params": {
        "optional": "modules..."
      }
    }
  },
  "cache": {
    "desc": "cache third packages in the local registry"
  },
  "install": {
    "desc": "install module(s) from local registry",
    "options": {
      "params": {
        "optional": "modules..."
      }
    }
  },
  "startcraft": {
    "desc": "install all modules via startcraft",
    "options": {}
  },
  "upi": {
    "desc": "unpublish -> publish -> install (tempory workaround to alias)",
    "options": {
      "params": {
        "optional": "modules..."
      }
    }
  },
  "publish": {
    "desc": "npm publish xcraft-core in local registry",
    "options": {
      "params": {
        "optional": "modules..."
      }
    }
  },
  "unpublish": {
    "desc": "npm unpublish xcraft-core in local registry",
    "options": {
      "params": {
        "optional": "modules..."
      }
    }
  },
  "verify": {
    "desc": "check for outdated modules (our)",
    "options": {
      "params": {
        "optional": "modules..."
      }
    }
  },
  "ncu": {
    "desc": "check for updatable modules (dependencies)",
    "options": {
      "params": {
        "optional": "modules..."
      }
    }
  },
  "modprefix": {
    "desc": "prefix for node_modules directory",
    "options": {
      "params": {
        "required": "location"
      }
    }
  },
  "ncu-ua": {
    "desc": "upgrade the package.json versions for all dependencies"
  }
}
