#!/bin/bash

. ./.node passive

PATH=${node%/*}:$PATH

if [ -d "./node_modules/grunt-contrib-jshint" -a -d "./node_modules/grunt-jshint2" ]; then
  ./node_modules/.bin/grunt --force jshint jshint2 $@
else
  echo "Install grunt-contrib-jshint and grunt-jshint2 first"
  echo "$ .npm install grunt-contrib-jshint grunt-jshint2"
fi
