{
  "files.watcherExclude": {
    "**/usr/doc": true,
    "**/usr/include": true,
    "**/usr/share": true,
    "**/var/devroot": true,
    "**/var/prodroot.*": true,
    "**/var/tmp": true,
    "**/var/wpkg*": true
  },
  "search.exclude": {
    "**/var/devroot": true,
    "**/var/prodroot.*": true,
    "**/var/tmp": true,
    "**/var/wpkg*": true
  },
  "search.followSymlinks": false,
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "testExplorer.useNativeTesting": true,
  "mochaExplorer.files": "lib/*/test/*.spec.js",
  "mochaExplorer.exit": true,
  "mochaExplorer.env": {
    "GOBLIN_ENFORCER_LOOSE": "1"
  },
  "cSpell.words": ["pacman", "xcraft"]
}
